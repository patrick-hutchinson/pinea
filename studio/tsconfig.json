{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Preserve",
    "moduleDetection": "force",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "schemaTypes/event.ts",
    "schemaTypes/types/videoWithMetadata.tsx",
    "schemaTypes/components/SpeakerAnnotationInput.jsx",
    "schemaTypes/types/interviewText.jsx"
  ],
  "exclude": ["node_modules"]
}
